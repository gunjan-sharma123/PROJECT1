<mvc:View controllerName="shop.project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    >
    <Page id="page" title="{i18n>title}">
    <headerContent>
    <Button icon="sap-icon://action" press="onNext"></Button>
    </headerContent>
    <content>
    <SearchField id="idSF" search="onSearch"></SearchField>
    <List id="idLST" mode="SingleSelectMaster" itemPress="onNavNext" items="{
            path: '/fruits',
            sorter: {
            path:'name'
        }
    }">
    <headerToolbar>
    <Toolbar >
    <ToolbarSpacer ></ToolbarSpacer>
    <Button icon="sap-icon://delete" press="onDeleteItems"></Button>
    </Toolbar>
    </headerToolbar>
    <items>
    <ObjectListItem type="Navigation" intro="{taste}" title="{name}" number="{price}" numberUnit="{curr}" icon="{image}"></ObjectListItem>
    </items>
    </List>
    </content>
    </Page>
</mvc:View>